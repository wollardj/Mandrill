@import "../../layout/globalVars.styl"

.navbar-mandrill
	background #e8e8e8
	background linear-gradient(to bottom,  #e8e8e8 0%,#bfbfbf 100%)
	border-bottom 1px solid rgb(106, 106, 106)

	.dropdown
		a
			color #333
			text-shadow 0px 1px 0px #eee

		a:hover, a:focus
			background-color rgb(61, 128, 214)
			color #fff
			text-shadow 0px -1px 0px #555


/* Ace Editor components */
p.editor-title
	height 25px
	font-family 'Lato'
	font-size 10pt
	font-weight 300
	margin -20px 0 20px 0
	padding 2px

	color #fff
	text-align center
	box-shadow inset 1px 1px 10px rgba(0, 0, 0, 0.5)
	background header_bg_color


#aceEditor
	margin-top -20px
