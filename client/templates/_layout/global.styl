@import 'globalVars.import.styl'


body
	background-color whitesmoke
	padding 50px 0 47px 0



.sortable
	cursor move

.mandrill-header + *
	background-color white
	margin 118px 0 0 0
	padding-top 15px
	box-shadow 0 -2px 15px rgba(0,0,0,0.5)
	position relative
	z-index 200

.mandrill-header
	text-align center
	margin -50px 0 0 0
	padding 65px 15px 15px 15px
	position fixed
	width 100%
	min-height 167px
	background header_bg_color
	z-index 100

	h1, h2, h3, h4, h5, h6
		color #fff
		text-shadow 0 -1px 0 rgba(0, 0, 0, 0.7)
		display block
		font-family 'Lato', sans-serif
		font-weight 300

		small, .small
			color rgba(255, 255, 255, 0.8)

	ol.breadcrumb
		background-color rgba(0,0,0,0.1)
		box-shadow inset 1px 1px 5px rgba(0,0,0,0.5)
		border-width 0
		margin 0
		padding 2px
		&>li+li:before
			padding 0
			content '/'

		li a
			color rgba(255, 255, 255, 1.0)

		&>.active
			color rgba(255, 255, 255, 0.8)



p.app-footer
	font-family 'Lato', sans-serif
	padding-top 15px
	height 47px
	position fixed
	bottom -15px
	width 100%
	z-index 100





// asana-style form fields (borders are hidden unless mouse over or focus)
input.low-profile
textarea.low-profile
	background-color transparent
	border-radius 3px
	border 1px solid transparent
	box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.0)
	color #777
	height 25px
	padding 1px 5px
	transition all 200ms

	&:hover:not(:focus)
		background-color white
		border 1px solid rgb(203, 203, 203)
		box-shadow inset 0 1px 1px rgba(0, 0, 0, .075)
	&:focus
		background-color white
		border 1px solid rgb(183, 183, 183)
		box-shadow inset 0 1px 1px rgba(0, 0, 0, .075)

	&.search
		width 60px

		&:focus
			outline none
			height 40px
			width 400px
			box-shadow inset 0 1px 1px rgba(0, 0, 0, .1)




// Typeahead classes
.tt-dropdown-menu
	background-color rgba(255, 255, 255, 0.9)
	padding 0px
	box-shadow 0 5px 10px rgba(0, 0, 0, 0.7)
	min-width 170px
	border-radius 3px 3px 5px 5px
	p
		padding 5px
		margin 0
		white-space pre

	.tt-suggestions
		padding 0

		.tt-suggestion:first-of-type
			border-radius 3px 3px 0 0
		.tt-suggestion:last-of-type
			border-radius 0 0 5px 5px

		.tt-suggestion
			margin 0
			white-space nowrap
			color #444
			text-align left
			font-size 12pt
			padding 1px 5px


		.tt-cursor
			background linear-gradient(to bottom, rgba(122,188,255,1) 0%,rgba(96,171,248,1) 44%,rgba(64,150,238,1) 100%)
			color white
			text-shadow 0 -1px 0 rgba(0, 0, 0, 0.7)



// Ace Editor
#mandrill_ace
	display block
	height 560px



.text-fixed-width
	font-family "Lucida Console", "Courier New"
