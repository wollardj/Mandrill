.elastic
	transform scale(0)
	opacity 0

.elastic-in
	animation anim-elastic-in 250ms ease-out
	transform scale(1)
	opacity 1

.elastic-out
	animation anim-elastic-out 250ms ease-in
	transform scale(0)
	opacity 0



@keyframes anim-elastic-in
	0%
		transform scale(0)
		opacity 0
	60%
		transform scale(1.1)
		opacity 0.6
	80%
		transform scale(0.9)
		opacity 0.8
	100%
		transform scale(1)
		opacity 1


@keyframes anim-elastic-out
	0%
		transform scale(1)
		opacity 1
	20%
		transform scale(0.9)
		opacity 0.8
	40%
		transform scale(1.1)
		opacity 0.6
	100%
		transform scale(0)
		opacity 0
