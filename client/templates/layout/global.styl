@import 'globalVars.import.styl'

body
	position relative

.row
	margin 0


.tab-pane
	padding-top 15px


.modal
	z-index 10000

.modal-dialog
	width 80%


div.borderless-container
	margin 0 -15px -15px -15px

	.navbar
		border-radius 0
		margin-left 0
		margin-right 0
		padding-left 15px
		padding-right 15px



#appContent
	margin-left 200px



.mandrill-header
	text-align center
	box-shadow inset 10px -5px 10px -7px #000
	margin 0 -15px 0 -15px
	padding 15px

	background header_bg_color

	button
		position absolute
		top 30px
		right 25px

	h1, h2, h3, h4, h5, h6
		color #fff
		text-shadow 0 -1px 0 rgba(0, 0, 0, 0.7)
		display inline-block
		font-family 'Lato', sans-serif
		font-weight 300


p.app-footer
	font-family 'Lato', sans-serif
	font-weight 300

/*
	Meant for use with .mandrill-header to provide a little space between the
	bottom of the header and the body content.
 */
.pad-bottom
	margin-bottom 20px




.navbar .pager
	margin 10px 0







/* "sticky" paging toolbar */
/* affixed navbars */

.paging-toolbar.affix-top
	position static


.paging-toolbar.affix .navbar
	background-color rgba(250, 250, 250, 0.93)
	margin 0

.paging-toolbar.affix
	position fixed
	top 0
	left 200px
	right 0
	box-shadow 1px 0 5px #000
	transition box-shadow 250ms


/*
	Make sure the table doesn't jump around when the navbar
	goes from 'static' to 'fixed'. Also make sure we're
	taking into account that the navbar will collapse under
	768px
*/
.paging-toolbar.affix ~ table.paging-table
	@media screen and (min-width: 768px)
		margin-top 75px

	@media screen and (max-width: 767px)	
		margin-top 139px

/* /"sticky" paging toolbar */