@import '../layout/globalVars.styl'


div.login-body
	background linear-gradient(to bottom,  #272822 0%,#424138 100%)
	color #aaa
	text-shadow 0 -1px 0 #000

	position absolute
	height 100%
	width 100%
	margin 0
	padding 0

	h2
		font-family 'Lato'
		font-weight 300


div.login-other-services
	background-color rgba(0, 0, 0, 0.1)
	padding 15px
	margin 15px 0 0 0
	border-top 1px solid #444
	border-bottom 1px solid #aaa
	box-shadow 0 7px 10px -7px rgba(255,255,255, 0.5)



form.form-login
	max-width 330px
	padding 15px
	margin 10% auto 0 auto

	input[type="text"]
		margin-bottom -1px
		border-bottom-left-radius 0px
		border-bottom-right-radius 0px

	input[type="password"]
		margin-top -1px
		border-top-left-radius 0px
		border-top-right-radius 0px