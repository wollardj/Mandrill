.ui-sortable-helper
    opacity 0.9
    border-radius 0
    box-shadow 5px 5px 15px rgba(0,0,0,0.8)


.sortable-list-group-item:before
    content "..."
    color rgba(0,0,0,0.0)

.sortable-list-group-item
    box-shadow inset 2px 2px 7px rgba(0,0,0,0.6)


.slgroup-handle
    opacity 0.5
    display inline-block
    width 16px
    padding 0 4px
    cursor move
